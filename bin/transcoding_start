#!/bin/bash

## script needs at least one argument, which should be a username
if [ $# -lt 1 ];
    then
        echo You must provide the user name under which supervisor should run the transcoding commands.
        status=0;
    else
        user=$1;
        sudo supervisord --configuration="app/config/supervisord.transcoding.conf" --logfile_maxbytes="50MB" --user="${user}"
        status=1;
fi
exit $exit;